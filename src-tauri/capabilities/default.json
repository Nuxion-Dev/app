{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for all windows",
    "windows": [
        "main",
        "overlay",
        "external"
    ],
    "permissions": [
        {
            "identifier": "http:default",
            "allow": [
                {
                    "url": "https://*.nuxion.org/*"
                },
                {
                    "url": "https://discord.com/api/*"
                },
                {
                    "url": "https://via.placeholder.com/"
                },
                {
                    "url": "https://*.spotify.com/*"
                },
                {
                    "url": "http://localhost:5000/*"
                },
                {
                    "url": "http://localhost:3431/*"
                }
            ]
        },
        "core:path:default",
        "core:event:default",
        "core:app:default",
        "core:image:default",
        "core:resources:default",
        "core:menu:default",
        "core:tray:default",
        "core:window:default",
        "core:window:allow-minimize",
        "core:window:allow-maximize",
        "core:window:allow-unmaximize",
        "core:window:allow-show",
        "core:window:allow-hide",
        "core:window:allow-close",
        "core:window:allow-start-dragging",
        "core:window:allow-set-ignore-cursor-events",
        "core:window:allow-set-fullscreen",
        "core:window:allow-set-always-on-top",
        "core:window:allow-set-focus",
        "core:window:allow-set-position",
        "core:window:allow-set-shadow",
        "core:window:allow-set-simple-fullscreen",
        "core:window:allow-set-size",
        "core:window:allow-set-decorations",
        "core:window:allow-set-title-bar-style",
        "core:webview:default",
        "updater:default",
        "process:default",
        "dialog:default",
        "notification:allow-is-permission-granted",
        "notification:allow-request-permission",
        "notification:allow-notify",
        "notification:allow-register-action-types",
        "notification:allow-register-listener",
        "notification:allow-cancel",
        "notification:allow-get-pending",
        "notification:allow-remove-active",
        "notification:allow-get-active",
        "notification:allow-check-permissions",
        "notification:allow-show",
        "notification:allow-batch",
        "notification:allow-list-channels",
        "notification:allow-create-channel",
        "notification:allow-delete-channel",
        "notification:allow-permission-state",
        "fs:default",
        "autostart:default",
        "shell:allow-kill",
        "shell:allow-open",
        "shell:allow-spawn",
        "authium:default",
        "authium:allow-is-logged-in",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "args": [],
                    "name": "bin/service.exe",
                    "sidecar": true
                }
            ]
        }
    ]
}