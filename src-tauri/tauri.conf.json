{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn generate",
    "beforeDevCommand": "yarn dev",
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:5167"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico"
      }
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": {
      "bin/*": "bin/"
    },
    "shortDescription": "nuxion",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMwMzlERkQxQTkzMENDRDgKUldUWXpEQ3AwZDg1d0VLMTRZeklhaFJIM3BSKytUL0daWGtKZFlWeVlseFlZdU90cmtBSWVGOUkK",
      "endpoints": [
        "https://github.com/Nuxion-Dev/app/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "productName": "Nuxion",
  "version": "0.2.3",
  "identifier": "org.nuxion.app",
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "minHeight": 768,
        "resizable": true,
        "title": "Nuxion Launcher",
        "minWidth": 1280,
        "width": 1440,
        "decorations": false,
        "center": true
      },
      {
        "label": "overlay",
        "fullscreen": false,
        "maximized": true,
        "resizable": false,
        "title": "Nuxion Overlay",
        "url": "/overlay",
        "visible": true,
        "focus": false,
        "transparent": true,
        "decorations": false,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "description": "Capability for the main window",
          "windows": [
            "main",
            "overlay",
            "external"
          ],
          "permissions": [
            {
              "identifier": "http:default",
              "allow": [{ "url": "https://*.nuxion.org/*" }, { "url": "https://via.placeholder.com/" }, { "url": "https://*.spotify.com/*" }, { "url": "http://127.0.0.1:5000/*" }, { "url": "http://localhost:3431/*" }]
            },
            "core:path:default",
            "core:event:default",
            "core:app:default",
            "core:image:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "core:window:default",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-close",
            "core:window:allow-start-dragging",
            "core:window:allow-set-ignore-cursor-events",
            "core:window:allow-set-fullscreen",
            "core:window:allow-set-always-on-top",
            "core:window:allow-set-focus",
            "core:window:allow-set-position",
            "core:window:allow-set-shadow",
            "core:webview:default",
            "updater:default",
            "process:default",
            "dialog:default",
            "notification:allow-is-permission-granted",
            "notification:allow-request-permission",
            "notification:allow-notify",
            "notification:allow-register-action-types",
            "notification:allow-register-listener",
            "notification:allow-cancel",
            "notification:allow-get-pending",
            "notification:allow-remove-active",
            "notification:allow-get-active",
            "notification:allow-check-permissions",
            "notification:allow-show",
            "notification:allow-batch",
            "notification:allow-list-channels",
            "notification:allow-create-channel",
            "notification:allow-delete-channel",
            "notification:allow-permission-state",
            "fs:default",
            "autostart:default",
            "shell:allow-execute",
            "shell:allow-kill",
            "shell:allow-open",
            "shell:allow-spawn"
          ]
        }
      ]
    }
  }
}